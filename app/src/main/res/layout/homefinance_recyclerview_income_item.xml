<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardOfIncome"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <TextView
            android:id="@+id/textOperationIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_income"
            android:textColor="#0B9E00"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textNameWhoIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="TextView"
            android:textColor="#070000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textNameIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textSumIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="TextView"
            android:textColor="#00A510"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>
</LinearLayout>